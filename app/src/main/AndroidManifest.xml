<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.EHealth">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Covidinfo">
        
        <!-- MANAGE COVID-19 INFO PAGE -->
        <activity
            android:name="com.example.EHealth.Covid19Info.ManageCovid19InfoPage"
            android:exported="true"
            android:parentActivityName="com.example.EHealth.MainActivity" />
        <activity
            android:name="com.example.EHealth.Covid19Info.AddPositiveCasePage"
            android:exported="false"
            android:parentActivityName="com.example.EHealth.Covid19Info.ManageCovid19InfoPage" />
        <activity
            android:name="com.example.EHealth.Covid19Info.Covid19CasesListPage"
            android:exported="false"
            android:parentActivityName="com.example.EHealth.Covid19Info.ManageCovid19InfoPage" />
        <activity
            android:name="com.example.EHealth.Covid19Info.UpdateExistingCasePage"
            android:exported="false"
            android:parentActivityName="com.example.EHealth.Covid19Info.ManageCovid19InfoPage" />
        <activity
            android:name="com.example.EHealth.Covid19Info.PublishCovid19InfoPage"
            android:exported="false"
            android:parentActivityName="com.example.EHealth.Covid19Info.ManageCovid19InfoPage" />
        <activity
            android:name="com.example.EHealth.Covid19Info.UpdateCovid19InfoPage"
            android:exported="false"
            android:parentActivityName="com.example.EHealth.Covid19Info.ManageCovid19InfoPage" />
        <!--             USER PAGE: COVID INFO & NOTIFICATION MESSAGE  -->
        <activity
            android:name="com.example.EHealth.Covid19Info.Covid19InfoPage"
            android:exported="false"
            android:parentActivityName="com.example.EHealth.MainActivity" />
        <activity
            android:name="com.example.EHealth.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>